@model PrimerParcial.Models.Deportista

@{
    ViewData["Title"] = "Registrar Participante";
}

<h2>Registrar Participante</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Disciplina"></label>
        <select asp-for="Disciplina" class="form-control">
            <option value="">Seleccione una disciplina</option>
            <option value="Natación">Natación</option>
            <option value="Atletismo">Atletismo</option>
            <option value="Ciclismo">Ciclismo</option>
            <option value="Otro">Otro</option>
        </select>
        <span asp-validation-for="Disciplina" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Edad"></label>
        <input asp-for="Edad" type="number" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CiudadResidencia"></label>
        <input asp-for="CiudadResidencia" class="form-control" />
        <span asp-validation-for="CiudadResidencia" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a href="/Participantes/Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
