@{
    ViewData["Title"] = "Home Page";
}


<div class="hero-container">
    <h1 class="hero-title">¡Bienvenido!</h1>
    <p class="hero-subtitle">Primer parcial - Bruno Depetris</p>
</div>

<style>
    .hero-container {
        background: linear-gradient(to right, #1f1f1f, #2c2c2c);
        color: #ffffff;
        padding: 100px 20px;
        text-align: center;
        border-radius: 16px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        margin: 40px auto;
        max-width: 700px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        transition: all 0.5s; 
    }
    
        .hero-container:hover {
            cursor: pointer;
            color: red;
            transform: scale(1.05); 
        }

    .hero-title {
        font-size: 3rem;
        margin-bottom: 20px;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        color: #cccccc;
    }
</style>

